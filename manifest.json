{
    "manifest_version": 3,
    "name": "HelpMeOut",
    "description": "It records users screen activity",
    "icons": {
        "128": "/images/android-chrome-192x192.png"
    },

    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/favicon-16x16.png",
            "32": "/images/favicon-32x32.png",
            "128": "/images/android-chrome-192x192.png"
        }
    },

    "host_permissions": [
        "http://*/",
        "https://*/*",
        "<all_urls>"
    ],

    "permissions": [
        "scripting",
        "tabs",
        "activeTab"
    ],
    "version": "1.0.0"
}